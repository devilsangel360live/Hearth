{
  "name": "hearth-recipe-app",
  "version": "1.0.0",
  "main": "electron/main.cjs",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch server/src/index.ts",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "build": "tsc && vite build",
    "build:server": "tsc server/src/index.ts --outDir server/dist --target es2020 --module commonjs --esModuleInterop",
    "preview": "vite preview",
    "server": "tsx server/src/index.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "electron": "electron electron/main.cjs",
    "electron:dev": "concurrently \"npm run dev:full\" \"wait-on http://localhost:3000 && electron electron/main.cjs\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@types/express": "^4.17.23",
    "cheerio": "^1.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsdom": "^26.1.0",
    "morgan": "^1.10.1",
    "node-html-parser": "^7.0.1",
    "prisma": "^6.15.0",
    "puppeteer": "^24.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/jsdom": "^21.1.7",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^0.17.4",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.hearth.recipe-app",
    "productName": "Hearth Recipe Manager",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "electron/assets/icon.icns",
      "category": "public.app-category.food-and-drink"
    },
    "win": {
      "icon": "electron/assets/icon.ico"
    },
    "linux": {
      "icon": "electron/assets/icon.png"
    }
  }
}
